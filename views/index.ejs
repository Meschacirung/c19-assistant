<%- include('./partials/head') %>
<style>
    #sidebarmenu{
        cursor: pointer;
    }
    .sidebar{
        position: fixed;
        z-index:1900;
        width:80%;
        height:100%;
        background: #ffffff;
        box-shadow: 0 0px 30px #1d1d1d38;
        animation: ease sidebar 4s;
        margin-left:-100%;
    }
    .sidebar-wrapper{
        background: #53535d49;
        position: absolute;
        height:100vh;
        width:100vw;
        z-index:1899;
        animation: ease fade .3s;
        display: none;
    }
    @keyframes fade{
        0%{
            opacity: -1;
        }
        100%{
            opacity: 2;
        }
    }
    @keyframes sidebar {
        0%{
            margin-left: -100%;
        };
        75%{
            margin-left: -36%;
        };
        100%{
            margin-left : 0px;
        }

    }
    .splash{
        background: #ffffff;
        height:100vh;
        width: 100vw;
        position:fixed;
        z-index:999;
        animation:hide .2s 1.7s ease forwards;
    }
    .link {
        margin-top:30px;
        font-weight:300;
        font-size:17px;
        color: #5d5d5d !important;
    }
    .link:hover{
        color:#343638 !important;
        font-weight: 600;
        transition: ease .1s;
    }
    .logo{
        position: fixed;
        bottom:35%;
        text-align: center;
        left:0;
        right: 0;
        z-index:1000;
        background: #ffffff;
        animation:hide .5s 1.5s ease forwards;
    }
    .powered{
        position: fixed;
        bottom:5%;
        text-align: center;
        left:0;
        right: 0;
        z-index:1000;
        animation:hide 1s 1.2s ease forwards;
    }
    
    @keyframes hide {
      0% {
        opacity: 1;
      }
      100% {
        opacity: 0;
        z-index: -1000;
      }
    }
  </style>
<div>
