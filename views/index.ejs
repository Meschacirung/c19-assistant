<%- include('./partials/head') %>
<div>
    <span id="splash" class="splash"></span>
    <div class="logo">
        <img src="images/chatsplsh.png" width="250" alt="" class="img-fluid">
    </div>
    <div class="powered">
        <span class="text-dark-2">Powered By</span>
        <a href=""><h3 class="text-center text-dark-2">MÃ©schac iRUNG</h3></a>
        <hr class="hr">
    </div>
    <div class="sidebar-wrapper">
        
    </div>
    <div class="sidebar" id="sidebar">
        <div class="pl-3 pr-3 pt-4 pb-4">
            <div class="row m-flex-center">
                <div class="col-auto">
                    <a href="/"><img src="images/covid 19.png" width="120" alt="" class="img-fluid"></a>
                </div>
                <div class="col-4 ml-auto">
                    <div class="p-3 shadow-sm-2 rounded-2 text-center">
                        <a>
                            <i class="icon-face send text-dark"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <nav class="pl-3 pr-3 pt-4">
            <ul class="list-unstyled">
                <li><a href="" class="link"><i class="icon-gear mr-3"></i>Options</a></li>
                <li class="mt-3"><a target="outblank" href="https://github.com/Meschacirung/c19-assistant/tree/chatbot" class="link"><i class="icon-github mr-3"></i>Contribuer</a></li>
                <li class="mt-3"><a href="" class="link"><i class="icon-paypal mr-3"></i>Faire un don</a></li>
                
                <div class="switch mt-5 link">
                    <label>
                      <i class="icon-brightness_2 icon-2 mr-3"></i><span class="title">Jour</span>
                      <input id="darkmode" type="checkbox">
                      <span class="lever"></span>
                    </label>
                </div>
            </ul>
        </nav>
        <div class="mt-5">
            <div class="ml-5 border-top"></div>
            <li class="pl-3 mt-3 list-unstyled"><a href="" class="link"><i class="icon-help mr-3"></i>Aide et commentaires</a></li>
            <li class="pl-3 mt-3 list-unstyled"><a href="" class="link"><i class="icon-user mr-3"></i>Feedback</a></li>
        </div>
    </div>
    <div class="col-lg-4 m-auto">
        <div>
            <div class="tab pr-3 pl-3 pt-lg-4 pt-1 bg-white rounded-top row m-flex-center text-right">
                <a id="sidebarmenu" class="p-2 text-dark mr-3"><i class="icon-menu send-2"></i></a>
                <h5 class="mr-auto text-dark">assistant</h5>
                <a  class="text-dark send-2"><i class="icon-more_vert"></i></a>
            </div>
            <div  class="chat-bg col-lg-4 col-md-9 m-auto " style="height:100%; left:0; right:0; position:fixed;">
                <div  class="chat scrollbar-black scroller pt-3 pb-3 pr-0" id="messages" style="height:77%;">                   
                    <audio id="audio" class="d-none" src="audio/msg-left.mp3" controls></audio>
                </div>
            </div>
            <div class="bg-white" style="position: fixed; bottom:0; padding-bottom:20px; right:0; left:0; text-justify:auto;">
                <div class="col-lg-4 col-md-8 m-auto row m-flex-center pr-lg-4 pl-lg-4 pl-3 pr-3">
                    <a href="" class="send-2 text-dark-2"><i class="icon-thermometer"></i></a>
                    <form class="bg-white rounded-3 col-lg-9 col-10 m-auto shadow-md row m-flex-center">
                        <input autocomplete="off" id="message" name="message" class="chat-form col-9" placeholder="Taper un message...">
                        <button style="margin-right:-20px !important;" class="btn-floating btn-light shadow-none "><i class="icon-send2 text-primary-2"></i></button>
                        <div class="d-none">
                            <a href="" class=""><i class="icon-timer send-2 text-dark-2"></i></a>
                            <button  class="btn-light btn-floating"><i class="icon-microphone text-white send"></i></button>
                            <a href="" class=""><i class="icon-keyboard text-dark-2 send-2"></i></a>
                        </div>
                    </form>
                    <a href="" class="send-2 text-dark-2 mr-lg-2"><i class="icon-twitter"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="js/jquery-3.3.1.min.js"></script>
<script src="js/chat.js"></script>

