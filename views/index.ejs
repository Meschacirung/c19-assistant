<%- include('./partials/head') %>
<%- include('./partials/story') %>
<div>
    <%- include('./partials/splashscreen') %>
    <%- include('./partials/sidebar') %>
    <div class="col-lg-4 m-auto">
        <div>
            <div class="tab pr-3 pl-3 pt-lg-4 mb-3 pt-4 bg-white rounded-top row m-flex-center text-right">
                <h4 class="mr-auto text-primary-2 font-weight-bold">Covid<span class="font-weight-normal text-dark-2">Bot</span></h4>
                <a id="sidebarmenu" class="p-2 text-dark"><i class="icon-menu send"></i></a>
            </div>
            <div  class="chat-bg col-lg-4 col-md-9 m-auto " style="height:100%; left:0; right:0; position:fixed;">
                <div  class="chat scrollbar-black scroller pt-3 pb-3 pr-0" id="messages" style="height:78%;">                   
                    <%- include('./partials/stories') %>
                    <audio id="audio" class="d-none" src="audio/msg-left.mp3" controls></audio>
                </div>
            </div>
            <div class="bg-white" style="position: fixed; bottom:0; padding-bottom:20px; right:0; left:0; text-justify:auto;">
                <div class="col-lg-4 col-md-8 m-auto row m-flex-center pr-lg-4 pl-lg-4 pl-3 pr-3">
                    <a href="" class="send-2 text-dark-2"><i class="icon-thermometer"></i></a>
                    <form class="bg-white rounded-3 col-lg-9 col-10 m-auto shadow-md row m-flex-center">
                        <input autocomplete="off" id="message" name="message" class="chat-form col-9" placeholder="Taper un message...">
                        <button style="margin-right:-20px !important;" class="btn-floating btn-light shadow-none "><i class="icon-send2 text-primary-2"></i></button>
                        <div class="d-none">
                            <a href="" class=""><i class="icon-timer send-2 text-dark-2"></i></a>
                            <button  class="btn-light btn-floating"><i class="icon-microphone text-white send"></i></button>
                            <a href="" class=""><i class="icon-keyboard text-dark-2 send-2"></i></a>
                        </div>
                    </form>
                    <a href="" class="send-2 text-dark-2 mr-lg-2"><i class="icon-twitter"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="js/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="js/owl.carousel.js"></script>
<script>
    $('.owl-one').owlCarousel({
        items:4,
        loop:true,
        center:false,
        margin:10,
        URLhashListener:true,
        autoplayHoverPause:false,
        startPosition: 'URLHash',
        responsiveClass : true,
        responsive :{
            0:{
                items :2,
                nav:true
            },
            280:{
                items : 3,
                nav:true,
                margin:50,
            },
            360:{
                items : 4,
                nav:true,
                margin:50,
            },
            768:{
                items : 6,
                nav:true,
                margin:20,
            },
            1000:{
                items :4,
                nav:true,
                margin:0,
            },
        }
    });
    $('.owl-two').owlCarousel({
        items:1,
        loop:true,
        center:false,
        margin:0,
        URLhashListener:true,
        autoplayHoverPause:false,
        startPosition: 'URLHash',
    });
</script>
<script src="js/chat.js"></script>

<%- include('./partials/scripts') %>
